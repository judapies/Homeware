{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/oauth/**",
        "function": "app"
      },
      {
        "source": "/smarthome/**",
        "function": "app"
      },
      {
        "source": "/panel/",
        "destination": "/panel.html"
      },
      {
        "source": "/cms/",
        "destination": "/cms.html"
      },
      {
        "source": "/cms/login/",
        "destination": "/login.html"
      },
      {
        "source": "/cms/devices/",
        "destination": "/devices.html"
      },
      {
        "source": "/cms/devices/edit/**",
        "destination": "/edit_device.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "README.md",
      "functions"
    ],
    "headers": [{
      "source" : "**/*.@(js|html)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=0"
      } ]
    }]
  }
}
